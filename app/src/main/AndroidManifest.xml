<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.booisajerk.getajobcards">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.booisajerk.getajobcards.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.booisajerk.getajobcards.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.booisajerk.getajobcards.AddCardActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.booisajerk.getajobcards.CardActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.booisajerk.getajobcards.EditCardActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.booisajerk.getajobcards.DeleteCardActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>


</manifest>